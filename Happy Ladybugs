#include <stdio.h>
#include <string.h>
#include <stdbool.h>

char* happyLadybugs(char* b) {
    int freq[26] = {0};
    bool hasEmpty = false;
    int n = strlen(b);

    for (int i = 0; i < n; i++) {
        if (b[i] == '_') hasEmpty = true;
        else freq[b[i] - 'A']++;
    }

    for (int i = 0; i < 26; i++) {
        if (freq[i] == 1) return "NO";
    }

    if (hasEmpty) return "YES";

    for (int i = 0; i < n; i++) {
        if ((i > 0 && b[i] == b[i - 1]) || (i < n - 1 && b[i] == b[i + 1])) continue;
        return "NO";
    }

    return "YES";
}

int main() {
    int g;
    scanf("%d", &g);
    while (g--) {
        int n;
        char b[105];
        scanf("%d", &n);
        scanf("%s", b);
        printf("%s\n", happyLadybugs(b));
    }
    return 0;
}

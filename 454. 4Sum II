#include <vector>
#include <unordered_map>
using namespace std;

class Solution {
public:
    int fourSumCount(vector<int>& nums1, vector<int>& nums2,
                     vector<int>& nums3, vector<int>& nums4) {
        unordered_map<int, int> sum12; // sum -> frequency
        
        // Step 1: Store sums of nums1 and nums2
        for (int a : nums1) {
            for (int b : nums2) {
                sum12[a + b]++;
            }
        }
        
        int count = 0;
        // Step 2: Check sums of nums3 and nums4
        for (int c : nums3) {
            for (int d : nums4) {
                int target = -(c + d);
                if (sum12.find(target) != sum12.end()) {
                    count += sum12[target];
                }
            }
        }
        
        return count;
    }
};

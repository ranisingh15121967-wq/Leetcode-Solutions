#include <stdio.h>

long strangeCounter(long t) {
    long cycleStart = 3;
    long time = 1;

    // Find the cycle where time t falls
    while (t > time + cycleStart - 1) {
        time += cycleStart;
        cycleStart *= 2;
    }

    // Calculate the value at time t
    return cycleStart - (t - time);
}

int main() {
    long t;
    scanf("%ld", &t);
    printf("%ld\n", strangeCounter(t));
    return 0;
}
